<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Secure File Upload Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --bg-dark: #0d1117;
            --bg-sidebar: #1a2332;
            --bg-card: #161b22;
            --text-light: #ffffff;
            --accent-blue: #3498db;
            --accent-yellow: #f39c12;
            --accent-gray: #95a5a6;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: var(--bg-dark);
            font-family: 'Segoe UI', sans-serif;
            color: var(--text-light);
        }
        /* Sidebar */
        .sidebar {
            background: linear-gradient(180deg, #1a2332 0%, #0f1621 100%);
            color: white;
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.4);
        }

            .sidebar h4 {
                color: #00c3ff;
                text-shadow: 0 0 8px rgba(0,195,255,0.7);
            }

            .sidebar a {
                display: block;
                color: white;
                padding: 0.75rem 1.5rem;
                text-decoration: none;
                transition: all 0.3s ease;
                font-size: 0.95rem;
            }

                .sidebar a:hover {
                    background: #2c3e50;
                    border-radius: 0.5rem;
                    transform: translateX(5px);
                    color: #00c3ff;
                }
        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 2rem;
            min-height: 100vh;
            background: radial-gradient(circle at top left, #1a2332 0%, #0d1117 100%);
            color: white;
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        /* Cards */
        .card {
            background-color: var(--bg-card);
            border: none;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 20px rgba(0,195,255,0.15);
            }
        /* Buttons */
        .btn-outline-primary {
            color: var(--accent-blue);
            border-color: var(--accent-blue);
        }

            .btn-outline-primary:hover {
                background-color: var(--accent-blue);
                color: white;
            }

        .btn-outline-info {
            color: var(--accent-blue);
            border-color: var(--accent-blue);
        }

            .btn-outline-info:hover {
                background-color: var(--accent-blue);
                color: white;
            }

        .btn-outline-warning {
            color: var(--accent-yellow);
            border-color: var(--accent-yellow);
        }

            .btn-outline-warning:hover {
                background-color: var(--accent-yellow);
                color: white;
            }

        .btn-outline-secondary {
            color: var(--accent-gray);
            border-color: var(--accent-gray);
        }

            .btn-outline-secondary:hover {
                background-color: var(--accent-gray);
                color: white;
            }
        /* Scrollbar for long pages */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: #2c3e50;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #3498db;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center mb-4">Secure Portal</h4>
        <a href="/Admin/Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
        <a href="/File/List"><i class="fas fa-folder-open me-2"></i>Files</a>
        <a href="/Admin/Alerts"><i class="fas fa-bell me-2"></i>Alerts</a>
        <a href="/Admin/Logs"><i class="fas fa-file-alt me-2"></i>CloudTrail Logs</a>
        <a href="/Admin/Users"><i class="fas fa-users me-2"></i>Users</a>
        <a href="/Admin/Reports"><i class="fas fa-chart-bar me-2"></i>Reports</a>
        <a href="/Admin/Settings"><i class="fas fa-cog me-2"></i>Settings</a>
    </div>
    <div class="main-content">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>