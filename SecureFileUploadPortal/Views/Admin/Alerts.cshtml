@model List<string>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "System Alerts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Alerts & Notifications</h2>
        <form asp-action="ClearAlerts" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i> Clear All
            </button>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-success text-center shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            No active alerts. Your system is healthy!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var alert in Model)
            {
                var severity = "info";
                if (alert.Contains("unauthorized", StringComparison.OrdinalIgnoreCase)) severity = "danger";
                else if (alert.Contains("error", StringComparison.OrdinalIgnoreCase)) severity = "warning";
                else if (alert.Contains("upload", StringComparison.OrdinalIgnoreCase)) severity = "success";

                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm alert-card">
                        <div class="card-body d-flex align-items-start">
                            <div class="me-3">
                                @if (severity == "danger")
                                {
                                    <i class="bi bi-exclamation-triangle-fill text-danger fs-3"></i>
                                }
                                else if (severity == "warning")
                                {
                                    <i class="bi bi-exclamation-circle-fill text-warning fs-3"></i>
                                }
                                else if (severity == "success")
                                {
                                    <i class="bi bi-cloud-upload-fill text-success fs-3"></i>
                                }
                                else
                                {
                                    <i class="bi bi-info-circle-fill text-info fs-3"></i>
                                }
                            </div>
                            <div>
                                <h6 class="fw-bold text-dark mb-1">System Alert</h6>
                                <p class="mb-0 text-muted">@alert</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .alert-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-left: 5px solid transparent;
    }

        .alert-card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
</style>
