@model SecureFileUploadPortal.Models.AdminDashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Users";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm secure-card-main">
                <div class="card-body">
                    <h2 class="card-title">User Management</h2>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>Activity Count</th>
                                    <th>Last Activity</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.TopUsers != null && Model.TopUsers.Any())
                                {
                                    @foreach (var user in Model.TopUsers)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td><span class="badge bg-primary">Admin</span></td>
                                            <td>@user.ActivityCount</td>
                                            <td>@DateTime.Now.AddDays(-1).ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <button class="btn btn-outline-info btn-sm" onclick="viewUser('@user.UserName')">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </button>
                                                <button class="btn btn-outline-warning btn-sm ms-1" onclick="editUser('@user.UserName')">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No users found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/Admin/Index" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewUser(username) {
        alert(`Viewing details for ${username}...`); // Replace with modal/redirect
    }
    function editUser(username) {
        alert(`Editing ${username}...`); // Replace with form
    }
</script>

<style>
    .secure-card-main {
        background: linear-gradient(135deg, #ecf0f1, #bdc3c7);
        border: 1px solid rgba(189, 195, 199, 0.5);
        color: #2c3e50;
    }

        .secure-card-main .card-title {
            color: #2c3e50;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(52, 152, 219, 0.1);
    }
</style>