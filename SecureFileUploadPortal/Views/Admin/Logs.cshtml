@model List<string>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CloudTrail Logs";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm secure-card-main">
                <div class="card-body">
                    <h2 class="card-title">CloudTrail Logs</h2>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Log Key</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@Model[i]</td>
                                            <td>
                                                <a asp-action="ViewLog" asp-route-key="@Model[i]" class="btn btn-outline-info btn-sm">View/Download</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No logs found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/Admin/Index" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>